{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "sku": {
      "type": "string",
      "required": true,
      "maxLength": 3,
      "minLength": 3,
      "regex": "^[A-Z]{3}$"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "longDescription": {
      "type": "richtext"
    },
    "product_category": {
      "model": "product-category",
      "via": "products"
    },
    "brand": {
      "model": "brand"
    },
    "unit": {
      "model": "unit"
    },
    "unitValue": {
      "type": "decimal",
      "required": true
    },
    "minSellingQuantity": {
      "type": "integer",
      "required": true
    },
    "maxSellingQuantity": {
      "type": "integer",
      "required": true
    },
    "buyingRate": {
      "type": "decimal",
      "required": true
    },
    "sellingRate": {
      "type": "decimal",
      "required": true
    },
    "discountType": {
      "type": "enumeration",
      "enum": [
        "AMOUNT",
        "PERCENTAGE"
      ]
    },
    "discountValue": {
      "type": "decimal"
    },
    "specifications": {
      "type": "json"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
