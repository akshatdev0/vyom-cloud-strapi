{
  "kind": "collectionType",
  "collectionName": "product_categories",
  "info": {
    "name": "Product Category",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "block": {
      "type": "boolean",
      "default": false
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "subcategories": {
      "collection": "product-category",
      "via": "parent_category"
    },
    "parent_category": {
      "model": "product-category",
      "via": "subcategories"
    },
    "sku": {
      "type": "string",
      "unique": false,
      "minLength": 2,
      "maxLength": 3,
      "required": true,
      "regex": "^[A-Z]{2,3}$"
    },
    "products": {
      "via": "product_category",
      "collection": "product"
    },
    "appliedPriceRules": {
      "collection": "price-rule"
    }
  }
}
