{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "name": "Company",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "pid": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "currentStatus": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "suspendStatus": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "businessType": {
      "model": "business-type"
    },
    "companyType": {
      "model": "company-type"
    },
    "sku": {
      "type": "string",
      "regex": "^[A-Z]{4}$",
      "required": true,
      "unique": true,
      "maxLength": 4,
      "minLength": 4
    },
    "priceRules": {
      "collection": "price-rule"
    },
    "appliedPriceRules": {
      "collection": "price-rule"
    },
    "orderShipments": {
      "collection": "order-shipment",
      "via": "company"
    },
    "productCategories": {
      "collection": "product-category",
      "via": "company"
    },
    "products": {
      "collection": "product",
      "via": "company"
    },
    "companyOwners": {
      "collection": "company-owner",
      "via": "company"
    },
    "employees": {
      "collection": "company-employee",
      "via": "company"
    },
    "address": {
      "model": "address"
    }
  }
}
