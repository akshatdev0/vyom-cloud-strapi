{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "name": "Company"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "pid": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "registrationDate": {
      "type": "datetime",
      "required": true
    },
    "businessType": {
      "type": "string"
    },
    "companyType": {
      "type": "string"
    },
    "currentStatus": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "suspendStatus": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "owner": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "company"
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "location.address"
    }
  }
}
