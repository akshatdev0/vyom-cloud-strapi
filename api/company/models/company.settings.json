{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "name": "Company"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "pid": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "currentStatus": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "suspendStatus": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "location.address"
    },
    "businessType": {
      "model": "business-type"
    },
    "companyType": {
      "model": "company-type"
    },
    "company_owner": {
      "model": "company-owner",
      "via": "company"
    }
  }
}
