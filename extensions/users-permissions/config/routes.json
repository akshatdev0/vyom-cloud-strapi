{
  "routes": [
    {
      "method": "POST",
      "path": "/auth/local/signup",
      "handler": "Auth.signup",
      "config": {
        "policies": ["plugins::users-permissions.ratelimit"],
        "prefix": "",
        "description": "Signup a new user with given mobile number and with the default role",
        "tag": {
          "plugin": "users-permissions",
          "name": "User",
          "actionType": "create"
        }
      }
    },
    {
      "method": "POST",
      "path": "/auth/send-sms-confirmation",
      "handler": "Auth.sendSmsConfirmation",
      "config": {
        "policies": [],
        "prefix": "",
        "description": "Send SMS OTP for mobile number confirmation",
        "tag": {
          "plugin": "users-permissions",
          "name": "User"
        }
      }
    },
    {
      "method": "GET",
      "path": "/auth/sms-confirmation",
      "handler": "Auth.smsConfirmation",
      "config": {
        "policies": [],
        "prefix": "",
        "description": "Confirm mobile number with received SMS OTP",
        "tag": {
          "plugin": "users-permissions",
          "name": "User"
        }
      }
    },
    {
      "method": "POST",
      "path": "/auth/create-password",
      "handler": "Auth.createPassword",
      "config": {
        "policies": [],
        "prefix": "",
        "description": "Create password for an authenticated user",
        "tag": {
          "plugin": "users-permissions",
          "name": "User"
        }
      }
    }
  ]
}